<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:StoreCollector.Maui.ViewModels"
    xmlns:models="clr-namespace:StoreCollector.Maui.Models"
    x:Class="StoreCollector.Maui.Views.ProductosPage"
    x:DataType="viewmodels:ProductosViewModel"
    Title="Productos">

    <!-- BINDING CONTEXT DEFINIDO AQUÃ -->
    
    <VerticalStackLayout Padding="0,50,0,0">

        <Button
            Text="Agregar Producto"
            Command="{Binding NuevoProductoCommand}"
            BackgroundColor="#4CAF50"
            TextColor="White"
            Margin="10"/>

        <RefreshView
            IsRefreshing="{Binding IsBusy}"
            Command="{Binding CargarProductosCommand}">

            <CollectionView
                ItemsSource="{Binding Productos}"
                Margin="10"
                SelectionMode="Single">

                <CollectionView.EmptyView>
                    <Label Text="No hay productos"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Producto">
                        <Frame Margin="5" Padding="10" BorderColor="Gray" CornerRadius="8">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="18" />
                                <Label Text="{Binding Descripcion}" FontSize="14" />
                                <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}" />
                                <Label Text="{Binding Stock, StringFormat='Stock: {0}'}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </RefreshView>

    </VerticalStackLayout>

</ContentPage>
